datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider  = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  googleId String  @unique
  username String
  email    String?
  posts    Post[]
}

model Post {
  id         Int      @id @default(autoincrement())
  author     User?     @relation(fields: [authorId], references: [id])
  authorId   Int?
  timestamp  DateTime @default(now())
  visibility String?
  content    String

  // Relationships
  // ...
}
